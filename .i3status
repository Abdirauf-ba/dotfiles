battery 1 {
        format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "‚ö° CHR"
        status_bat = "üîã BAT"
        status_unk = "? UNK"
        status_full = "‚òª FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 40
        #low_threshold = 20
}




#battery 1 {
#format = "%status %percentage %remaining"
#}

run_watch DHCP {
pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
pidfile = "/var/run/vpnc/pid"
}

#cpu_temperature 0 {
#        format = "T: %degrees ¬∞C"
#        path = "/sys/devices/platform/coretemp.0/temp1_input"
#}

cpu_temperature 0{
        format = "%degrees ¬∞C"
        path="/sys/devices/platform/coretemp.0/temp2_input"
        max_threshold=75
}



tztime local {
format = "%Y-%m-%d %H:%M:%S"
}

load {
format = "%1min"
}

disk "/" {
format = "%avail"
}
