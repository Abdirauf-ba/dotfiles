order += "run_watch DHCP"
#order += "read_file uptime"
#order += ‚Äúread_file BRIGHTNESS‚Äù
order += "ipv6"
order += "cpu_temperature 0"
order += "disk /"
order += "run_watch VPN"
order += "imap"
order += "wireless wlp3s0"
order += "ethernet enp2s0"
order += "battery 1"
order += "load"
order += "tztime local"
order += "volume master"


imap {
    cache_timeout = 60
    imap_server = 'imap.myprovider.com'
    mailbox = 'INBOX'
    password = 'coconut'
    port = '993'
    user = 'mylogin'
    on_click 1 = "exec thunderbird"
}



volume master {
        format = "‚ô™: %volume"
        format_muted = "‚ô™: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

